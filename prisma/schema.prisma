generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  projects  Project[]
  createdAt DateTime @default(now())
}

enum ZoneType {
  URBAIN
  PERI_URBAIN
  RURAL
}

enum ServiceType {
  EMBB     // enhanced Mobile Broadband
  URLLC    // Ultra-Reliable Low Latency Communication
  MMTC     // massive Machine-Type Communication
}


model Project {
  id            Int         @id @default(autoincrement())
  userId        Int
  name          String
  description   String?                           // Champ facultatif
  area          Float
  userDensity   Int
  frequency     Float
  bandwidth     Int
  zoneType      ZoneType
  services      ServiceType[]
  power         Float       @default(43.0)
  antennaHeight Float       @default(30.0)
  userHeight    Float       @default(1.5)
  createdAt     DateTime    @default(now())
  results       Result[]
  user          User        @relation(fields: [userId], references: [id])
}


model Result {
  id               Int      @id @default(autoincrement())
  projectId        Int
  coverage         Float
  capacity         Float
  gnodebCount      Int
  backhaulCapacity Float
  report           Json
  project          Project  @relation(fields: [projectId], references: [id])
}
